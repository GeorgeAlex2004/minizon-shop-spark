# Minizon E-commerce Environment Configuration
# Copy this file to config.env and update the values

# Application Configuration
NODE_ENV=production
APP_NAME=minizon-shop-spark
APP_VERSION=1.0.0

# Server Configuration
PORT=80
HOST=0.0.0.0

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=your-account-id
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_NAME=minizon-frontend
DOCKER_TAG=latest

# Kubernetes Configuration
KUBERNETES_NAMESPACE=minizon
KUBERNETES_CLUSTER_NAME=minizon-cluster

# Domain Configuration
DOMAIN_NAME=minizon.example.com
SSL_CERTIFICATE_EMAIL=admin@minizon.example.com

# Database Configuration (for future backend)
DATABASE_URL=postgresql://user:password@localhost:5432/minizon
REDIS_URL=redis://localhost:6379

# API Configuration (for future backend)
API_BASE_URL=https://api.minizon.example.com
API_VERSION=v1

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CHAT_SUPPORT=false
ENABLE_PUSH_NOTIFICATIONS=false

# Third-party Services
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# CDN Configuration
CDN_URL=https://cdn.minizon.example.com
STATIC_ASSETS_URL=https://assets.minizon.example.com