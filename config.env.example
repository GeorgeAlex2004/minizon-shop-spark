# Minizon E-commerce Deployment Configuration
# Copy this file to config.env and update with your values

# AWS Configuration
AWS_ACCOUNT_ID=your-aws-account-id
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# GitHub Configuration
GITHUB_REPO=https://github.com/yourusername/minizon-shop-spark.git
GITHUB_TOKEN=your-github-token

# Jenkins Configuration
JENKINS_URL=http://your-jenkins-server:8080
JENKINS_USERNAME=your-jenkins-username
JENKINS_TOKEN=your-jenkins-api-token

# Kubernetes Configuration
KUBERNETES_NAMESPACE=minizon
KUBERNETES_CLUSTER_NAME=minizon-eks-cluster

# Application Configuration
APPLICATION_NAME=minizon-shop-spark
APPLICATION_VERSION=latest
APPLICATION_PORT=80

# Domain Configuration
DOMAIN_NAME=minizon.com
SSL_CERTIFICATE_ARN=your-ssl-certificate-arn

# Monitoring Configuration
PROMETHEUS_URL=http://your-prometheus-server:9090
GRAFANA_URL=http://your-grafana-server:3000

# Database Configuration (if using external database)
DATABASE_HOST=your-database-host
DATABASE_PORT=5432
DATABASE_NAME=minizon
DATABASE_USERNAME=minizon_user
DATABASE_PASSWORD=your-database-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Backup Configuration
BACKUP_S3_BUCKET=minizon-backups
BACKUP_RETENTION_DAYS=30
